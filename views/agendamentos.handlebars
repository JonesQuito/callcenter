<!-- Custom fonts for this template-->
<link href="vendor/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
<link
    href="https://fonts.googleapis.com/css?family=Nunito:200,200i,300,300i,400,400i,600,600i,700,700i,800,800i,900,900i"
    rel="stylesheet">

<!-- Custom styles for this template-->
<link href="css/sb-admin-2.min.css" rel="stylesheet">

<style>
    .link-azul{
        color: blue
    }
    .link-vermelho{
        color: brown
    }
</style>


<div class="row">

    <div class="col-lg-2 text-center">
        <div class="bg-light border-right" id="sidebar-wrapper">
            <div class="sidebar-heading">
                <h4>Especialidades</h4>
            </div>
            <div class="list-group list-group-flush">
                {{#each especialidades}}
                <a href="#" class="list-group-item list-group-item-action bg-light">{{descricao}}</a>
                {{else}}
                <h3>Não há especialidades cadastradas</h3>
                {{/each}}
            </div>
        </div>
    </div>

    <div class="col-lg-10 text-center mt-1">
        <table class="table table-bordered table-hover" id="table">
            <thead class="thead-dark">
                <tr>
                    <th scope="col">Médico</th>
                    {{#each vagas}}
                    <th scope="col">{{data}}</th>
                    {{/each}}
                </tr>
            </thead>
            <tbody>
                {{#each medicos}}
                <tr>
                    <td>{{nome}}</td>
                    <td><a href="#" class="link-azul">2</a></td>
                    <td><a href="#" class="link-azul">5</a></td>
                    <td><a href="#" class="link-vermelho">0</a></td>
                    <td><a href="#" class="link-azul">2</a></td>
                    <td><a href="#" class="link-azul">5</a></td>
                    <td><a href="#" class="link-azul">8</a></td>
                    <td><a href="#" class="link-vermelho">1</a></td>
                    <td><a href="#" class="link-azul">2</a></td>
                    <td><a href="#" class="link-azul">8</a></td>
                </tr>
                {{else}}
                <h3>Não há especialidades cadastradas</h3>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>